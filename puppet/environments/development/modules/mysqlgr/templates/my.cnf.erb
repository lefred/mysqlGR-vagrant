[mysqld]
datadir=/var/lib/mysql
user=mysql
log_error=<%= @hostname %>_error.log
bind-address=<%= scope.lookupvar('mysqlgr::mysql_ip') %>

#InnoDB settings
innodb_log_file_size=64M
innodb_file_per_table=1

#Replication settings
<% if has_variable?("mysqlserverid") and @mysqlserverid.to_s != "undef" then %>server-id=<%= @mysqlserverid %> <% end %>
binlog_format=ROW
log_slave_updates
#support GTID
enforce_gtid_consistency=1
gtid_mode=on
log-bin=<%= @hostname %>-bin
binlog-row-image = MINIMAL
binlog-rows-query-log-events = ON
log-bin-trust-function-creators = TRUE
expire-logs-days = 90
max-binlog-size = 1G
relay-log-recovery = ON
slave-parallel-type = LOGICAL_CLOCK
slave-preserve-commit-order = ON
slave-rows-search-algorithms = 'INDEX_SCAN,HASH_SCAN'
slave-type-conversions = ALL_NON_LOSSY
sync-master-info = 1000
sync-relay-log = 1000
skip_slave_start
slave_parallel_workers = 0
disabled_storage_engines="MyISAM,BLACKHOLE,FEDERATED,ARCHIVE"

#Group Replication Settings
master_info_repository=TABLE
relay_log_info_repository=TABLE
transaction-write-set-extraction=XXHASH64
binlog-checksum=NONE


loose-group_replication_group_name      = "<%= scope.lookupvar('mysqlgr::group_name') %>"
loose-group_replication_start_on_boot   = off
loose-group_replication_local_address   = "<%= scope.lookupvar('mysqlgr::mysql_ip') %>:3406"
loose-group_replication_group_seeds     = "<%= scope.lookupvar('mysqlgr::group_seeds') %>"
loose-group_replication_bootstrap_group = off
loose-group_replication 		= FORCE_PLUS_PERMANENT

[mysql]
user=root
prompt="<%= @hostname %> mysql> "


